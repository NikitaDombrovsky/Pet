<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <Button
            android:onClick="akfk"
            android:layout_width="122dp"
            android:layout_height="20dp"/>

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/logo" />

        <!-- Email Address -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="#E8E8E8"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:startIconDrawable="@drawable/mail"
            app:startIconTint="#999999">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Электронная почта"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="#666666"
                android:textColorHint="#AAAAAA" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxBackgroundColor="#E8E8E8"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/lock"
            app:startIconTint="#999999">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#666666"
                android:textColorHint="#AAAAAA" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="Забыли пароль?"
            android:textColor="#4CAF50"
            android:textSize="14sp" />

        <!-- Manually Add Pet Section -->
        <TextView
            android:id="@+id/tvManuallyAddPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Добавление питомца"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Pet Name -->
        <EditText
            android:id="@+id/etPetName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext_bg"
            android:hint="Имя питомца"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="#666666"
            android:textColorHint="#AAAAAA" />

        <!-- Breed Name -->
        <Spinner
            android:id="@+id/etBreedName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_edittext_bg"
            android:hint="Тип питомца"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#666666"
            android:textColorHint="#AAAAAA" />

        <!-- Gender, Age, Colour Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/etGender"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_bg"
                android:hint="Пол"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#666666"
                android:textColorHint="#AAAAAA" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_bg"
                android:hint="Возраст"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#666666"
                android:textColorHint="#AAAAAA" />

            <EditText
                android:id="@+id/etColour"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_bg"
                android:hint="Порода"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#666666"
                android:textColorHint="#AAAAAA" />
        </LinearLayout>

        <!-- Height and Weight Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            android:weightSum="2">



            <EditText
                android:id="@+id/etWeight"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_bg"
                android:hint="Вес"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#666666"
                android:textColorHint="#AAAAAA" />
        </LinearLayout>

        <!-- Signup Button -->
        <com.google.android.material.button.MaterialButton
            android:onClick="SignUp"
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#4CAF50"
            android:text="Зарегистрироваться"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <!-- Footer -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="© All Rights Reserved to Pixel Posse - 2022"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

</ScrollView>